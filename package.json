{
  "name": "reaclette",
  "version": "0.8.0",
  "license": "ISC",
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/JsCommunity/reaclette",
  "bugs": "https://github.com/JsCommunity/reaclette/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/JsCommunity/reaclette"
  },
  "author": {
    "name": "Julien Fontanet",
    "email": "julien.fontanet@isonoe.net"
  },
  "main": "dist/",
  "files": [
    "dist/",
    "factory.js"
  ],
  "browserslist": [
    ">2%"
  ],
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "make-error": "^1.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.0.5",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-compat": "^2.6.3",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.1.2",
    "jest": "^24.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "rimraf": "^2.6.2"
  },
  "peerDependencies": {
    "react": ">=15"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production babel --source-maps --out-dir=dist/ src/",
    "clean": "rimraf dist/",
    "dev": "cross-env NODE_ENV=development babel --watch --source-maps --out-dir=dist/ src/",
    "dev-test": "jest --bail --watch",
    "prebuild": "npm run clean",
    "predev": "npm run prebuild",
    "prepublishOnly": "npm run build",
    "pretest": "eslint --ignore-path .gitignore src/",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "\\.spec\\.js$",
    "transform": {}
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint --ignore-pattern '!*'",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
